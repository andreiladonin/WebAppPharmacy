@model WebAppPharmacy.Models.Supplier

@{
    ViewData["Title"] = "Удаление поставщика";
}

<div class="container mt-4">
    <h2 class="mb-3 text-danger">
        <i class="bi bi-trash3-fill me-2"></i> Удаление поставщика
    </h2>
    <div class="alert alert-warning">
        <strong>Вы уверены, что хотите удалить этого поставщика?</strong>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Название</dt>
                <dd class="col-sm-8">@Model.Title</dd>

                <dt class="col-sm-4">Адрес</dt>
                <dd class="col-sm-8">@Model.Address</dd>

                <dt class="col-sm-4">Контактное лицо</dt>
                <dd class="col-sm-8">@Model.ContactPerson</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Телефон</dt>
                <dd class="col-sm-8">@Model.Phone</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Назад
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill"></i> Удалить
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
