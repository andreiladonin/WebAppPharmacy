@model WebAppPharmacy.Models.Supplier

@{
    ViewData["Title"] = "Детали поставщика";
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary">
        <i class="bi bi-info-circle-fill me-2"></i> Детали поставщика
    </h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Название</dt>
                <dd class="col-sm-8">@Model.Title</dd>

                <dt class="col-sm-4">Адрес</dt>
                <dd class="col-sm-8">@Model.Address</dd>

                <dt class="col-sm-4">Контактное лицо</dt>
                <dd class="col-sm-8">@Model.ContactPerson</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Телефон</dt>
                <dd class="col-sm-8">@Model.Phone</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Назад к списку
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
            <i class="bi bi-pencil-square"></i> Редактировать
        </a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}