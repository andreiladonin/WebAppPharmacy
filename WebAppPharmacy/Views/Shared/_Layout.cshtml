@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Аптечная система</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-light border-end" id="sidebar-wrapper">
            <div class="sidebar-heading text-white bg-primary p-3 fw-bold">Аптека</div>
            <div class="list-group list-group-flush">
                <a asp-controller="Clients" asp-action="Index" class="list-group-item list-group-item-action">Клиенты</a>
                <a asp-controller="Employees" asp-action="Index" class="list-group-item list-group-item-action">Сотрудники</a>

                <a class="list-group-item list-group-item-action" data-bs-toggle="collapse" href="#productsCollapse" role="button">Товары и Партии</a>
                <div class="collapse ps-3" id="productsCollapse">
                    <a asp-controller="Products" asp-action="Index" class="list-group-item list-group-item-action">Все товары</a>
                    <a asp-controller="Batches" asp-action="Index" class="list-group-item list-group-item-action">Партии</a>
                    <a asp-controller="Categories" asp-action="Index" class="list-group-item list-group-item-action">Категории</a>
                    <a asp-controller="ProductTypes" asp-action="Index" class="list-group-item list-group-item-action">Типы товаров</a>
                    <a asp-controller="MeasurementUnits" asp-action="Index" class="list-group-item list-group-item-action">Ед. измерения</a>
                </div>

                <a class="list-group-item list-group-item-action" data-bs-toggle="collapse" href="#salesCollapse">Продажи</a>
                <div class="collapse ps-3" id="salesCollapse">
                    <a asp-controller="Sales" asp-action="Index" class="list-group-item list-group-item-action">Продажи</a>
                    <a asp-controller="SaleDetails" asp-action="Index" class="list-group-item list-group-item-action">Детали продаж</a>
                    <a asp-controller="SaleStatus" asp-action="Index" class="list-group-item list-group-item-action">Статусы продаж</a>
                </div>

                <a class="list-group-item list-group-item-action" data-bs-toggle="collapse" href="#prescriptionsCollapse">Рецепты</a>
                <div class="collapse ps-3" id="prescriptionsCollapse">
                    <a asp-controller="Prescriptions" asp-action="Index" class="list-group-item list-group-item-action">Рецепты</a>
                    <a asp-controller="PrescriptionItems" asp-action="Index" class="list-group-item list-group-item-action">Позиции рецептов</a>
                    <a asp-controller="PrescriptionStatus" asp-action="Index" class="list-group-item list-group-item-action">Статусы рецептов</a>
                </div>

                <a class="list-group-item list-group-item-action" data-bs-toggle="collapse" href="#ordersCollapse">Заказы</a>
                <div class="collapse ps-3" id="ordersCollapse">
                    <a asp-controller="SupplierOrders" asp-action="Index" class="list-group-item list-group-item-action">Заказы поставщикам</a>
                    <a asp-controller="OrderDetails" asp-action="Index" class="list-group-item list-group-item-action">Детали заказов</a>
                    <a asp-controller="SupplierOrderStatus" asp-action="Index" class="list-group-item list-group-item-action">Статусы заказов</a>
                    <a asp-controller="OrderDetailStatus" asp-action="Index" class="list-group-item list-group-item-action">Статусы позиций</a>
                </div>

                <a asp-controller="Suppliers" asp-action="Index" class="list-group-item list-group-item-action">Поставщики</a>
            </div>
        </div>

        <!-- Main content -->
        <div class="container-fluid p-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>