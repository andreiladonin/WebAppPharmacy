<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Аптечная система</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-light border-end" id="sidebar-wrapper">
            <div class="sidebar-heading text-white bg-primary p-3 fw-bold">Аптека</div>
            <div class="list-group list-group-flush">
                <a asp-controller="Clients" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                    <i class="bi bi-person-circle me-2"></i> Клиенты
                </a>
                <a asp-controller="Employees" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                    <i class="bi bi-person-fill me-2"></i> Сотрудники
                </a>

                <!-- Products & Batches Dropdown -->
                <a class="list-group-item list-group-item-action d-flex align-items-center" data-bs-toggle="collapse" href="#productsCollapse" role="button">
                    <i class="bi bi-box me-2"></i> Товары и Партии
                </a>
                <div class="collapse ps-3" id="productsCollapse">
                    <a asp-controller="Products" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="bi bi-boxes me-2"></i> Все товары
                    </a>
                    <a asp-controller="Batches" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="bi bi-file-earmark-spreadsheet me-2"></i> Партии
                    </a>
                    <a asp-controller="Categories" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="bi bi-tags me-2"></i> Категории
                    </a>
                    <a asp-controller="ProductTypes" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="bi bi-type me-2"></i> Типы товаров
                    </a>
                    <a asp-controller="MeasurementUnits" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="bi bi-ruler me-2"></i> Ед. измерения
                    </a>
                </div>

                <!-- Sales Dropdown -->
                <a class="list-group-item list-group-item-action d-flex align-items-center" data-bs-toggle="collapse" href="#salesCollapse">
                    <i class="bi bi-cart-fill me-2"></i> Продажи
                </a>
                <div class="collapse ps-3" id="salesCollapse">
                    <a asp-controller="Sales" asp-action="Create" class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="bi bi-cart-plus me-2"></i> Провести продажу
                    </a>
                    <a asp-controller="Sales" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="bi bi-file-earmark-earbuds me-2"></i> Продажи
                    </a>
                    <a asp-controller="SaleStatus" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="bi bi-flag-checkered me-2"></i> Статусы продаж
                    </a>
                </div>

                <!-- Recipes Dropdown -->
                <a class="list-group-item list-group-item-action d-flex align-items-center" data-bs-toggle="collapse" href="#prescriptionsCollapse">
                    <i class="bi bi-file-earmark-medical me-2"></i> Рецепты
                </a>
                <div class="collapse ps-3" id="prescriptionsCollapse">
                    <a asp-controller="Prescriptions" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="bi bi-file-earmark me-2"></i> Рецепты
                    </a>
                    <a asp-controller="PrescriptionStatus" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                        <i class="bi bi-check-circle me-2"></i> Статусы рецептов
                    </a>
                </div>

                <a asp-controller="Suppliers" asp-action="Index" class="list-group-item list-group-item-action d-flex align-items-center">
                    <i class="bi bi-truck me-2"></i> Поставщики
                </a>

                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger w-100 mt-3">
                            <i class="bi bi-box-arrow-right"></i> Выход
                        </button>
                    </form>
                }
            </div>
        </div>

        <!-- Main content -->
        <div class="container-fluid p-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.slim.js" integrity="sha256-UgvvN8vBkgO0luPSUl2s8TIlOSYRoGFAX4jlCIm9Adc=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>