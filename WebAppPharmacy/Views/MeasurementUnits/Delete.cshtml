@model WebAppPharmacy.Models.Dictionaries.MeasurementUnit

@{
    ViewData["Title"] = "Удаление единицы измерения";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger">
        <i class="bi bi-trash-fill me-2"></i> Удаление единицы измерения
    </h2>

    <h5 class="text-warning">Вы уверены, что хотите удалить эту запись?</h5>
    <div class="mt-3">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.UnitName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.UnitName)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Abbreviation)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Abbreviation)
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash"></i> Удалить
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Назад к списку
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.js"></script>
}