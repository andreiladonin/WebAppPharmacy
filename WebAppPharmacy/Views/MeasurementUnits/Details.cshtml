@model WebAppPharmacy.Models.Dictionaries.MeasurementUnit

@{
    ViewData["Title"] = "Детали единицы измерения";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">
        <i class="bi bi-eye-fill me-2"></i> Детали единицы измерения
    </h2>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.UnitName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UnitName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Abbreviation)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Abbreviation)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil-fill"></i> Редактировать
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Назад к списку
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.js"></script>
}