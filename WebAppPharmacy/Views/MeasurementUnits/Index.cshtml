@model IEnumerable<WebAppPharmacy.Models.Dictionaries.MeasurementUnit>

@{
    ViewData["Title"] = "Единицы измерения";
}

<div class="container mt-4">
    <h2 class="mb-4 text-info">
        <i class="bi bi-rulers me-2"></i> Список единиц измерения
    </h2>

    <div class="d-flex justify-content-between mb-3">
        <p class="lead">Справочник единиц измерения</p>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i> Добавить новую
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.UnitName)</th>
                <th>@Html.DisplayNameFor(model => model.Abbreviation)</th>
                <th class="text-center" style="width: 220px;">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.UnitName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Abbreviation)</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil-fill"></i> Редактировать
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">
                            <i class="bi bi-eye-fill"></i> Подробнее
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash-fill"></i> Удалить
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.js"></script>
}
