@model WebAppPharmacy.Models.Product

@{
    ViewData["Title"] = "Удаление товара";
}

<h2 class="mb-4 text-danger">Удаление товара</h2>
<h5>Вы уверены, что хотите удалить этот товар?</h5>

<table class="table table-bordered mt-4">
    <tr><th>Название</th><td>@Model.Title</td></tr>
    <tr><th>Форма</th><td>@Model.DosageForm</td></tr>
    <tr><th>Дозировка</th><td>@Model.Dosage</td></tr>
    <tr><th>Ед. изм.</th><td>@Model.MeasurementUnit?.UnitName</td></tr>
    <tr><th>Производитель</th><td>@Model.Manufacturer?.Title</td></tr>
    <tr><th>Категория</th><td>@Model.Category?.Title</td></tr>
    <tr><th>Тип</th><td>@Model.Type?.TypeName</td></tr>
    <tr><th>Цена</th><td>@Model.Price ₽</td></tr>
    <tr><th>Мин. кол-во</th><td>@Model.MinQuantity</td></tr>
    <tr><th>Требует рецепт</th><td>@(Model.IsRecipe ? "Да" : "Нет")</td></tr>
    <tr><th>Маркирован</th><td>@(Model.IsMarked ? "Да" : "Нет")</td></tr>
</table>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
