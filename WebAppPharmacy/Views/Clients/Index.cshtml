@model IEnumerable<WebAppPharmacy.Models.Client>

@{
    ViewData["Title"] = "Клиенты";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-people-fill me-2"></i> Список клиентов
    </h2>

    <p>
        <a asp-action="Create" class="btn btn-success mb-3">
            <i class="bi bi-person-plus-fill"></i> Добавить клиента
        </a>
    </p>

    <div class="table-responsive">
        <table class="table table-hover align-middle table-bordered">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().DateBirthday)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Phone)</th>
                    <th class="text-center">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateBirthday)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary me-1" title="Редактировать">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1" title="Подробнее">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Удалить">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>