@model WebAppPharmacy.Models.Client

@{
    ViewData["Title"] = "Удаление клиента";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger">
        <i class="bi bi-trash3-fill me-2"></i> Удаление клиента
    </h2>

    <div class="alert alert-warning">
        <strong>Вы уверены, что хотите удалить этого клиента?</strong>
    </div>

    <div class="mb-4">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.FullName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.FullName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.DateBirthday)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.DateBirthday)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Email)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Email)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Phone)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Phone)</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash-fill me-1"></i> Удалить
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle me-1"></i> Назад к списку
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}