@model WebAppPharmacy.Models.Client

@{
    ViewData["Title"] = "Детали клиента";
}

<div class="container mt-4">
    <h2 class="mb-4 text-info">
        <i class="bi bi-person-lines-fill me-2"></i> Детали клиента
    </h2>

    <div class="card p-4">
        <h4 class="mb-3">Информация о клиенте</h4>
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.FullName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.FullName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.DateBirthday)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.DateBirthday)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Email)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Email)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Phone)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Phone)</dd>
        </dl>
    </div>

    <div class="d-flex gap-2 mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
            <i class="bi bi-pencil-square me-1"></i> Редактировать
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Назад к списку
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}