@model WebAppPharmacy.Models.ProductType
@{
    ViewData["Title"] = "Детали типа продукта";
}

<div class="container mt-4">
    <h1 class="text-info">
        <i class="bi bi-eye-fill me-2"></i> Детали типа продукта
    </h1>

    <div>
        <h4>Тип продукта</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TypeName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TypeName)
            </dd>
        </dl>
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
            <i class="bi bi-pencil-fill"></i> Редактировать
        </a> |
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Назад к списку
        </a>
    </div>
</div>