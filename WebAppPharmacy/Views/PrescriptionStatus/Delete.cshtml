@model WebAppPharmacy.Models.Dictionaries.PrescriptionStatus

@{
    ViewData["Title"] = "Удаление статуса рецепта";
}

<div class="container mt-4">
    <h2 class="text-danger mb-4">
        <i class="bi bi-trash-fill me-2"></i> Удаление статуса рецепта
    </h2>

    <h5 class="text-warning">Вы уверены, что хотите удалить этот статус?</h5>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.StatusName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.StatusName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash-fill"></i> Удалить
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Назад к списку
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.js"></script>
}