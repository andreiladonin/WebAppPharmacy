@model WebAppPharmacy.Models.Dictionaries.PrescriptionStatus

@{
    ViewData["Title"] = "Детали статуса рецепта";
}

<div class="container mt-4">
    <h2 class="mb-4 text-info">
        <i class="bi bi-eye-fill me-2"></i> Детали статуса рецепта
    </h2>

    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.StatusName)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.StatusName)
        </dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil-fill"></i> Редактировать
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Назад к списку
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.js"></script>
}