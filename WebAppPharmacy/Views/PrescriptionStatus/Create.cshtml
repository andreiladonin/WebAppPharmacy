@model WebAppPharmacy.Models.Dictionaries.PrescriptionStatus

@{
    ViewData["Title"] = "Создание статуса рецепта";
}

<div class="container mt-4">
    <h2 class="text-success mb-4">
        <i class="bi bi-plus-circle me-2"></i> Новый статус рецепта
    </h2>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="StatusName" class="form-label"></label>
                    <input asp-for="StatusName" class="form-control" />
                    <span asp-validation-for="StatusName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i> Создать
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left me-1"></i> Назад к списку
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}