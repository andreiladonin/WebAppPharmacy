@model WebAppPharmacy.Models.Category

@{
    ViewData["Title"] = "Детали категории";
}

<div class="container mt-4">
    <h2 class="mb-4 text-info">
        <i class="bi bi-info-circle me-2"></i> Детали категории
    </h2>

    <h4>Категория</h4>
    <hr />

    <div class="row">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Title)
            </dd>
        </dl>
    </div>

    <!-- Actions: Edit and Back to List -->
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square me-2"></i> Редактировать
        </a>
        <a asp-action="Index" class="btn btn-link">Назад к списку</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}