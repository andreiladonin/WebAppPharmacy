@model WebAppPharmacy.Models.PrescriptionItem

@{
    ViewData["Title"] = "Добавить позицию рецепта";
    var prescriptionId = ViewBag.PrescriptionId ?? Model.PrescriptionId;
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <input type="hidden" name="PrescriptionId" value="@prescriptionId" />

    <div class="mb-3">
        <label asp-for="ProductId" class="form-label"></label>
        <select asp-for="ProductId" class="form-select" asp-items="ViewBag.ProductId">
            <option value="">Выберите товар</option>
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DispensedQuantity" class="form-label"></label>
        <input asp-for="DispensedQuantity" class="form-control" />
        <span asp-validation-for="DispensedQuantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-controller="Prescriptions" asp-action="Details" asp-route-id="@prescriptionId" class="btn btn-secondary">Отмена</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}