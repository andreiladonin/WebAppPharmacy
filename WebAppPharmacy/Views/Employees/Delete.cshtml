@model WebAppPharmacy.Models.Employee

@{
    ViewData["Title"] = "Удаление сотрудника";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger">
        <i class="bi bi-person-x-fill me-2"></i> Удаление сотрудника
    </h2>

    <div class="alert alert-warning">
        <h5><i class="bi bi-exclamation-triangle-fill me-2"></i>Вы уверены, что хотите удалить этого сотрудника?</h5>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ФИО</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

                <dt class="col-sm-3">Должность</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Position)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash-fill me-1"></i> Удалить
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left-circle"></i> Назад к списку
        </a>
    </form>
</div>