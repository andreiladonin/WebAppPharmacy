@model WebAppPharmacy.Models.Employee

@{
    ViewData["Title"] = "Детали сотрудника";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="bi bi-person-vcard me-2"></i> Детали сотрудника
    </h2>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ФИО</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

                <dt class="col-sm-3">Должность</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Position)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square"></i> Редактировать
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Назад к списку
        </a>
    </div>
</div>