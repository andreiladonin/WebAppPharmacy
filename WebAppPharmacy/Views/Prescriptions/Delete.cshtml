@model WebAppPharmacy.Models.Prescription

@{
    ViewData["Title"] = "Удаление рецепта";
}

<h2 class="mb-4 text-danger">Удаление рецепта</h2>
<h5>Вы уверены, что хотите удалить этот рецепт?</h5>

<table class="table table-bordered mt-4">
    <tr><th>Код рецепта</th><td>@Model.PrescriptionCode</td></tr>
    <tr><th>Врач</th><td>@Model.DoctorName</td></tr>
    <tr><th>Дата выдачи</th><td>@Model.IssueDate.ToString("dd.MM.yyyy")</td></tr>
    <tr><th>Срок действия</th><td>@(Model.ExpiryDate?.ToString("dd.MM.yyyy") ?? "Не указан")</td></tr>
    <tr><th>Клиент</th><td>@Model.Client?.FullName</td></tr>
    <tr><th>Статус</th><td>@Model.Status?.StatusName</td></tr>
</table>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
