@model IEnumerable<WebAppPharmacy.Models.VM.PrescriptionViewModel>

@{
    ViewData["Title"] = "Рецепты";
}

<h2 class="mb-4">Список рецептов</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">➕ Новый рецепт</a>
</p>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Врач</th>
            <th>Код</th>
            <th>Дата выдачи</th>
            <th>Срок действия</th>
            <th>Клиент</th>
            <th>Статус</th>
            <th class="text-center">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DoctorName</td>
                <td>@item.PrescriptionCode</td>
                <td>@item.IssueDate.ToShortDateString()</td>
                <td>@(item.ExpiryDate?.ToShortDateString() ?? "—")</td>
                <td>@item.ClientName</td>
                <td>@item.StatusName</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">🔍</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">🗑️</a>
                </td>
            </tr>
        }
    </tbody>
</table>